<section class="prt_about_wrapper prt_toppadder115">
    <aside class="prt_close_wrapper">
        <img src="{{ asset('assets/images/down_arrow.png')}}" alt="Close" class="prt_close">
    </aside>
    <div class="container">
        <article class="row">
            {#----------------------------- WHO AM I -----------------------------#}
            <div class="prt_about_info prt_bottompadder80">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 hidden-xs">
                    <div class="prt_about_img" itemscope itemtype="http://schema.org/Person">
                        <img src="{{ asset('assets/images/question_mark.png')}}" alt="About Image" itemprop="image" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="prt_heading_wrapper_2">
                        <div class="prt_heading prt_toppadder50">
                            <h1>{{ 'profile.title'|trans({}, 'about') }}</h1>
                            <p>{{ 'profile.subtitle'|trans({}, 'about') }}</p>
                        </div>
                    </div>
                    <div class="prt_about_details text-justify">
                        <p itemscope itemtype="http://schema.org/Person" itemprop="knowsAbout">
                            {% trans from 'about' %}
                                profile.shortDesc
                            {% endtrans %}
                        </p>
                        <a href="#" class="prt_btn" itemscope itemtype="http://schema.org/DownloadAction" itemprop="fromLocation">
                            {{ 'profile.buttons.resume'|trans({}, 'about') }}
                        </a> 
                        <a href="#" id="hireButton" class="prt_btn" itemscope itemtype="http://schema.org/WriteAction" itemprop="url">
                            {{ 'profile.buttons.hireMe'|trans({}, 'about') }}
                        </a>
                    </div>
                </div>
            </div>
            {#----------------------------- EDUCATION -----------------------------#}
            <div class="prt_about_edulearn_wrapper prt_bottompadder115">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="prt_heading_wrapper">
                        <div class="prt_heading">
                            <h1>{{ 'education.title'|trans({}, 'about') }}</h1>
                            <p>{{ 'education.subtitle'|trans({}, 'about') }}</p>
                        </div>
                    </div>
                    <div class="prt_about_learnsection">
                        <div class="row">
                            {% for education in educationList if educationList is not empty %}
                            <div class="{{ education.firstHtmlClass }}">
                                <div class="{{ education.secondHtmlClass }}">
                                    <div class="prt_about_learnbox_year">
                                        <h1>{{ education.graduationYear }}</h1>
                                    </div>
                                    <div class="prt_about_learnbox_info" itemscope itemtype="http://schema.org/Person">
                                        <h4 itemprop="award">{{ education.degree }}</h4>
                                        <span itemprop="homeLocation">{{ education.country }}</span>
                                        <p itemprop="alumniOf">{{ education.shortDesc }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {#----------------------------- EXPERIENCE -----------------------------#}
            <div class="prt_about_experience_wrapper prt_bottompadder60">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="prt_heading_wrapper">
                        <div class="prt_heading">
                            <h1>{{ 'experience.title'|trans({}, 'about') }}</h1>
                            <p>{{ 'experience.subtitle'|trans({}, 'about') }}</p>
                        </div>
                    </div>
                    <div class="prt_about_experience">
                        <div class="row">
                            {% for experience in experienceList if experienceList is not empty %}
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="prt_about_experiencebox">
                                        <div class="prt_about_experience_year">
                                            <h1>{{ experience.startingYear }}</h1>
                                            <h4>{{ experience.startingMonth }} To {{ experience.endingDate }}</h4>
                                        </div>
                                        <div class="prt_about_experience_info" itemscope itemtype="http://schema.org/Corporation">
                                            <h4 itemprop="hasOccupation">
                                                {{ experience.position }}
                                            </h4>
                                            <span itemprop="worksFor">
                                                {{ experience.company }}
                                            </span>
                                            <p itemprop="knowsAbout">
                                                {{ experience.shortDesc }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {#----------------------------- HOBBIES -----------------------------#}
            <div class="prt_profile_info">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="prt_profile_slider">
                        <div class="owl-carousel owl-theme">
                            <div class="item">
                                <i class="fa fa-plane pl_clr1" aria-hidden="true"></i>
                                <h4>{{ 'hobbies.icons.plane'|trans({}, 'about') }}</h4>
                            </div>
                            <div class="item">
                                <i class="fa fa-gamepad pl_clr2" aria-hidden="true"></i>
                                <h4>{{ 'hobbies.icons.gamepad'|trans({}, 'about') }}</h4>
                            </div>
                            <div class="item">
                                <i class="fas fa-swimmer pl_clr3" aria-hidden="true"></i>
                                <h4>{{ 'hobbies.icons.swimmer'|trans({}, 'about') }}</h4>
                            </div>
                            <div class="item">
                                <i class="fa fa-book pl_clr1" aria-hidden="true"></i>
                                <h4>{{ 'hobbies.icons.book'|trans({}, 'about') }}</h4>
                            </div>
                            <div class="item">
                                <i class="fas fa-running pl_clr2" aria-hidden="true"></i>
                                <h4>{{ 'hobbies.icons.jogger'|trans({}, 'about') }}</h4>
                            </div>
                            <div class="item">
                                <i class="fa fa-music pl_clr3" aria-hidden="true"></i>
                                <h4>{{ 'hobbies.icons.music'|trans({}, 'about') }}</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="prt_heading_wrapper_2">
                        <div class="prt_heading">
                            <h1>{{ 'hobbies.title'|trans({}, 'about') }}</h1>
                            <p>{{ 'hobbies.subtitle'|trans({}, 'about') }}</p>
                        </div>
                    </div>
                    <div class="prt_profile_details" itemscope itemtype="http://schema.org/Person">
                        <p itemprop="description">
                            {% trans from 'about' %}
                                hobbies.shortDesc
                            {% endtrans %}
                        </p>
                    </div>
                </div>
            </div>
        </article>
    </div>
    {# ----- Footer ----- #}
    {% include "@Core/Default/footer.html.twig" %}
</section>