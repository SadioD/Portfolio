<section class="prt_portfolio_wrapper prt_toppadder115">
    <aside class="prt_close_wrapper">
        <img src="{{ asset('assets/images/left_arrow.png')}}" alt="Close" class="prt_close">
    </aside>
    <div class="container">
        <article class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="prt_heading_wrapper">
                    <div class="prt_heading">
                        <h1>portfolio</h1>
                        <p>MY work</p>
                    </div>
                </div>
            </div>

            {# Inclusion du projet et divs ouvrantes et fermantes en fonction de l'index de la boucle #}
            <div class="prt_portfolio_box popup-gallery">
                {% for project in projectList %}
                    {% if project.loopStatus == 'start' %}
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 prt_loadmore">                            
                            {% include "@Core/Default/portfolio_project.html.twig" %}
                            {% if loop.last %}
                                </div>
                            {% endif %}                        
                    {% else %}
                            {% include "@Core/Default/portfolio_project.html.twig" %}
                        </div>
                    {% endif %}
                {% endfor %}

                {# Bouton Load More #}
                {% if projectList|length > 6 %}
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                        <button class="prt_btn" id="loadMore">load more</button>
                    </div>
                {% endif %}
            </div>
        </article>
    </div>
    {# ----- Footer ----- #}
    {% include "@Core/Default/footer.html.twig" %}
</section>