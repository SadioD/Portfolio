<section class="prt_contact_wrapper prt_toppadder115">
    <aside class="prt_close_wrapper">
        <img src="{{ asset('assets/images/right_arrow.png')}}" alt="Close" class="prt_close">
    </aside>
    <div class="container">
        <article class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="prt_heading_wrapper">
                    <div class="prt_heading">
                        <h1>get in touch</h1>
                        <p>contact us</p>
                    </div>
                </div>
            </div>
            <div class="prt_contact_box">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="prt_contact_info">
                        <h1>How I can help you ?</h1>
                        <div class="prt_contact_form">
                            <div class="row">
                                {{ form_start(form)}}

                                    {# Les erreurs générales du formulaire. #}
                                    {{ form_errors(form) }}

                                    {# Génération du label + error + widget pour les champs. #}
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.authorName, {'attr': {'class': 'require', 'placeholder': 'Your Name'}}) }}
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.authorEmail, {'attr': {'class':'require', 'placeholder':'Your Email', 'data-valid':'email',
                                        'data-error':'Email should be valid.'}}) }}
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        {{ form_errors(form.authorName) }}
                                        {{ form_errors(form.authorEmail) }}
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        {{ form_widget(form.subject, {'attr': {'class':'require', 'placeholder':'Subject'}}) }}
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        {{ form_errors(form.subject) }}
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        {{ form_widget(form.content, {'attr': {'class':'require', 'placeholder':'Message', 'rows':'4'}}) }}
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        {{ form_errors(form.content) }}
                                    </div>
                                    
                                    {# Génération automatique des champs pas encore écrits. Dans cet exemple, ce serait le champ CSRF (géré automatiquement
                                    par Symfony !)
                                    et tous les champs cachés (type « hidden »). #}
                                    {{ form_rest(form) }}
                                    
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="response"></div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <button type="submit" class="prt_btn submitForm" form-type="contact">submit</button>
                                    </div>

                                {# Fermeture de la balise form du formulaire HTML #}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="prt_contact_map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3325.7149899484166!2d-92.46035748446522!3d33.534795052266986!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x862d89d84d550aef%3A0xc554ea1ecff51963!2s368+7th+%237%2C+Hampton%2C+AR+71744%2C+USA!5e0!3m2!1sen!2sin!4v1506497917270"
                            allowfullscreen></iframe>
                    </div>
                </div>
            </div>
            <div class="prt_contact_details">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="prt_contact_details_box details_box1">
                        <h4>Phone</h4>
                        <p>+1-202-555-0125<br>01-202-555-0125</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="prt_contact_details_box details_box2">
                        <h4>Email</h4>
                        <p><a href="#">name@yourmail.com</a><br><a href="#">mail@yourname.com</a></p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="prt_contact_details_box details_box3">
                        <h4>Address</h4>
                        <p>71 Pilgrim Avenue<br>Chevy Chase, MD 20815</p>
                    </div>
                </div>
            </div>
        </article>
    </div>
    {# ----- Footer ----- #}
    {% include "@Core/Default/footer.html.twig" %}
</section>