{% extends "base.html.twig" %}
    {% block body %}
        <div class="container" id="LoginContainer">
            {# Form Erros #}
            {% if error %}
            <div class="alert alert-danger" id="alertForm">
                {{ error.message }}
            </div>
            {% endif %}

            {# Form #}
            <form action="{{ path('sadio_auth_security_check') }}" method="post">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="well formContainer">
                            <div class="form-group">
                                <input class="formInput form-control" type="text" name="_username" placeholder="Your Login" required value="{{ last_username }}" />
                            </div>
                            <div class="form-group">
                                <input class="formInput form-control" type="password" name="_password" placeholder="Your Password" required />
                            </div>
                            <div class="form-group">
                                <input type="submit" id="loginButton" class="btn btn-warning btn-lg" value="Get Online" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    {% endblock body %}