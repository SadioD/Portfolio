{% extends "@SadioAuth/layout.html.twig" %}
    {% block admin_body %}
        <section>
            <form action="" method="post">
                <div class="row" id="replyDiv">
                    <div class="col-xs-12">
                        <div class="well formContainer">
                            <div class="form-group">
                                <label for="receiverEmail">Receiver's Email :</label><br />
                                <input class="formInput form-control" type="text" id="receiverEmail" name="receiverEmail" value="{{ message.authorEmail }}"
                                    required />
                            </div>
                            <div class="form-group">
                                <label for="subject">Subject :</label><br />
                                <input class="formInput form-control" type="text" id="subject" name="subject" value="RE: {{ message.subject }}"
                                    required />
                            </div>
                            <div class="form-group">
                                <label for="content">Content :</label><br />
                                <textarea class="formInput form-control" id="content" name="content" rows=4 required>{{ message.content }}</textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" id="replyButton" class="btn btn-warning btn-lg" value="SEND" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    {% endblock admin_body %}